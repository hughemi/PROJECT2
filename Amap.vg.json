{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Percent of Population Double Vaccinated (as at Oct 6th 2021)",
  "width": "container",
  "height": "container",
  "projection": {
    "type": "equirectangular",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "params": [
    {
      "name": "center_to",
      "value": [3, 15],
      "bind": {
        "input": "select",
        "options": [
          [3, 25],
          [-103.2, 44.1],
          [-60.7, -18],
          [23, 50.7],
          [17.3, 5.4],
          [97.2, 32],
          [115, -10],
          [134, -27.2],
          [144.63, -36.7],
          [144.96, -37.82]
        ],
        "labels": ["Centre", "North America", "South America", "Europe", "Africa", "Asia", "Pacific", "Australia", "Victoria", "Melbourne"],
        "name": "Map Centre: "
      }
    },
    {
      "name": "zoom_level",
      "value": 90,
      "bind": {
        "input": "range",
        "min": 90,
        "max": 10000,
        "step": 10,
        "name": "Zoom: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/hughemi/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
      },
      "transform": [{
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/hughemi/PROJECT2/main/doubleVaxPer100.csv"
            },
            "key": "country",
            "fields": ["doubleVaxPer100"]
          }
        },
        {"calculate": "datum.doubleVaxPer100 / 100", "as": "People fully Vaccinated per 100"}
      ],
      "mark": {
        "type": "geoshape", "stroke": "white", "strokeWidth": 0.3
        },
      "encoding": {
        "color": {
          "field": "People fully Vaccinated per 100",
          "type": "quantitative"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "People fully Vaccinated per 100", "type": "quantitative", "title": "Population double vaccinated (%)"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/hughemi/PROJECT2/main/ne_50m_admin_1_states_provinces.json",
        "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {"url": "https://raw.githubusercontent.com/hughemi/PROJECT2/main/maxAusStates.csv"},
            "key": "State",
            "fields": ["VaxPercent"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1.1},
      "encoding": {
        "color": {"field": "VaxPercent","type": "quantitative"},
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {"field": "VaxPercent", "type": "quantitative", "title": "Population double vaccinated (%)"}
        ]
      }  
    },
    {
      "data": {
      "url": "https://raw.githubusercontent.com/blademaw/fit3179-a2/main/data/vic_lga.json",
      "format": {"type": "topojson", "feature": "vic_lga"}
      },
      "transform": [
      {
        "lookup": "properties.ABB_NAME",
        "from": {
          "data": {"url": "https://raw.githubusercontent.com/hughemi/PROJECT2/main/lgaDataClean.csv"},
          "key": "LGA",
          "fields": ["VaxPercent"]
        }
      }],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {"field": "VaxPercent","type": "quantitative"},
        "tooltip": [
          {"field": "properties.ABB_NAME", "type": "nominal", "title": "LGA"},
          {"field": "VaxPercent", "type": "quantitative", "title": "Population double vaccinated (%)"}
        ]
      }
    }
  ]
}
