{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Population Double Vaccinated (%) Global Map (as at Oct 10th 2021)",
  "width": 670,
  "config": {"view": {"strokeWidth":0}},
  "height": 280,
  "projection": {
    "type": "equirectangular",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "params": [
    {
      "name": "center_to",
      "value": [3, 15],
      "bind": {
        "input": "select",
        "options": [
          [3, 25],
          [-103.2, 38],
          [-60.7, -18],
          [23, 50.7],
          [17.3, 5.4],
          [97.2, 32],
          [115, 0],
          [134, -27.2]
        ],
        "labels": ["Centre", "North America", "South America", "Europe", "Africa", "Asia", "Pacific", "Australia"],
        "name": "Map Centre: "
      }
    },
    {
      "name": "zoom_level",
      "value": 105,
      "bind": {
        "input": "range",
        "min": 105,
        "max": 1000,
        "step": 10,
        "name": "Zoom: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/hughemi/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
      },
      "transform": [{
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/hughemi/PROJECT2/main/doubleVaxPer100.csv"
            },
            "key": "country",
            "fields": ["doubleVaxPer100"]
          }
        },
        {"calculate": "datum.doubleVaxPer100 / 100", "as": "Population double vaccinated (%)"}
      ],
      "mark": {
        "type": "geoshape", "stroke": "white", "strokeWidth": 0.3
        },
      "encoding": {
        "color": {
          "field": "Population double vaccinated (%)",
          "type": "quantitative",
          "title": "Vaccinated (%)"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Population double vaccinated (%)", "type": "quantitative", "title": "Pop. double vaccinated (%)", "format": ".1f"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/hughemi/PROJECT2/main/ne_50m_admin_1_states_provinces.json",
        "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {"url": "https://raw.githubusercontent.com/hughemi/PROJECT2/main/maxAusStates.csv"},
            "key": "State",
            "fields": ["VaxPercent"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1.1},
      "encoding": {
        "color": {
          "field": "VaxPercent","type": "quantitative",
          "legend": {
            "orient": "none",
            "legendX": 0,
            "legendY": 120,
            "tickCount": 6,
            "gradientLength": 132,
            "padding": 5
          } 
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {"field": "VaxPercent", "type": "quantitative", "title": "Population double vaccinated (%)"}
        ]
      }  
    },
    {
      "data": {
        "values": [
          {"lon": 17, "lat": -47, "writing": "Less than 4% of Africa"},
          {"lon": 17, "lat": -55, "writing": "is double vaccinated"}
        ]
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {"type": "text", "dy": -10},
          "encoding": {"text": {"field": "writing", "type": "nominal"}}
        }
      ]
    }
  ]
}
