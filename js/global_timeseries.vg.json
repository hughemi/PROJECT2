{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 214,
    "height": 239,
    "config": {"font": "Open Sans", "view": {"strokeWidth":0}},
    "title": { "text": "Pop. Vaccinated (%) per Country" },
    "data": {
        "url": "https://raw.githubusercontent.com/hughemi/PROJECT2/main/data/global_vax_timeseries.csv"
    },        
    "params": [
        {
            "name": "rank",
            "value": 185,
            "bind": {
                "input": "range",
                "min": 1,
                "max": 185,
                "step": 1,
                "name": "Rank Filter: "
            }
        },
        {
            "name": "Region_highlight",
            "select": {"type": "point", "fields":["region"]}, "bind": "legend",
            "value": "Sub-Saharan Africa"
        },
        {
            "name": "Region_selection",
            "bind": {
                "input": "select",
                "options": [
                null,
                "South Asia",
                "Europe & Central Asia",
                "Middle East & North Africa",
                "Sub-Saharan Africa",
                "Latin America & Caribbean",
                "East Asia & Pacific",
                "North America"
                ],
                "labels": [
                "Show All",
                "South Asia",
                "Europe & Central Asia",
                "Middle East & North Africa",
                "Sub-Saharan Africa",
                "Latin America & Caribbean",
                "East Asia & Pacific",
                "North America"
                ],
                "name": "Region: "
            }
        }
    ],
    "transform": [        
        {"filter": "datum.rank <= rank"},
        {"filter": "Region_selection == null || datum.region == Region_selection"}
    ],
    "encoding": {
        "x": {
            "field": "date", 
            "type": "temporal",
            "scale": {"domain": ["1/1/2021", "10/06/2021"]},
            "title": "Date",
            "axis": {"grid": false, "format": "%b %Y"}

        },
        "y": {
            "field": "people_fully_vaccinated_per_hundred",
            "type": "quantitative",
            "scale": {"domain": [0, 90]},
            "title": "Population double vaccinated (%)",
            "axis": {"grid": false}
        },
        "detail": {
                "field": "country", 
                "type": "nominal"
        }
    },
    "layer": [
        {

            "mark": {
                "type": "line",
                "opacity": 0.5
            },
            "encoding":{
                "color": {
                        "field": "region", 
                        "type": "nominal",
                        "title": "Region",
                        "scale": {
                            "domain": [
                            "East Asia & Pacific",
                            "Europe & Central Asia",
                            "Latin America & Caribbean",
                            "Middle East & North Africa",
                            "North America",
                            "South Asia",
                            "Sub-Saharan Africa"
                            ],
                            "range": [
                            "#66c2a5",
                            "#fc8d62",
                            "#e5c494",
                            "#e78ac3",
                            "#a6d854",
                            "#ffd92f",
                            "#e31c24"
                            ]
                        },
                        "legend": {
                            "orient": "none",
                            "legendX": 4,
                            "legendY": 0,
                            "labelFontSize": 8,
                            "titleFontSize": 9
                        }
                },
                "opacity": {
                    "condition": {"param": "Region_highlight", "value": 0.6},
                    "value": 0.05
                },
                "tooltip": [
                    {"field": "country", "type": "nominal", "title": "Country"},
                    {"field": "date", "type": "temporal", "title": "Date"},
                    {"field": "people_fully_vaccinated_per_hundred", "type": "quantitative",
                        "format": ".1f", "title": "Pop. double vaccinated (%)"},
                    {"field": "region", "type": "nominal", "title": "Region"},
                    {"field": "rank", "type": "quantitative", "format": ",", "title": "Rank"}
                ]
            }  
        }
    ]
}