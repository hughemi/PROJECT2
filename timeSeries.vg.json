{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 650,
    "height": 350,
    "title": { "text": "Percent of Population Double Vaccinated (for 2021 so far)" },
    "data": {
        "url": "https://raw.githubusercontent.com/hughemi/PROJECT2/main/vax_timeseries.csv"
    },        
    "params": [
        {
            "name": "rank",
            "value": 217,
            "bind": {
                "input": "range",
                "min": 1,
                "max": 217,
                "step": 1,
                "name": "Rank Filter"
            }
        },
        {
            "name": "population",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 100000000,
                "step": 1000000,
                "name": "Min. Population"
            }
        },
        {
            "name": "Region_selection",
            "bind": {
                "input": "select",
                "options": [
                null,
                "South Asia",
                "Europe & Central Asia",
                "Middle East & North Africa",
                "Sub-Saharan Africa",
                "Latin America & Caribbean",
                "East Asia & Pacific",
                "North America"
                ],
                "labels": [
                "Show All",
                "South Asia",
                "Europe & Central Asia",
                "Middle East & North Africa",
                "Sub-Saharan Africa",
                "Latin America & Caribbean",
                "East Asia & Pacific",
                "North America"
                ],
                "name": "Region Selection"
            }
        }
    ],
    "transform": [
        {"filter": "datum.rank <= rank"},
        {"filter": "datum.population > population"},
        {"filter": "Region_selection == null || datum.region == Region_selection"}
    ],
    "encoding": {
        "x": {
            "field": "date", 
            "type": "temporal",
            "scale": {"domain": ["1/1/2021", "10/06/2021"]},
            "title": "Date [Daily Data]"
        },
        "y": {
            "field": "people_fully_vaccinated_per_hundred",
            "type": "quantitative",
            "scale": {"domain": [0, 120]},
            "title": "Population double vaccinated (%)"
        },
        "detail": {
                "field": "country", 
                "type": "nominal"
        }
    },
    "layer": [
        {
            "selection": {
                "Region_highlight":{
                    "type": "multi",
                    "fields": ["region"],
                    "bind": "legend"
                }
            },
            "mark": {
                "type": "line",
                "opacity": 0.5
            },
            "encoding":{
                "color": {
                        "field": "region", 
                        "type": "nominal",
                        "scale": {
                            "domain": [
                            "East Asia & Pacific",
                            "Europe & Central Asia",
                            "Latin America & Caribbean",
                            "Middle East & North Africa",
                            "North America",
                            "South Asia",
                            "Sub-Saharan Africa"
                            ],
                            "range": [
                            "#66c2a5",
                            "#fc8d62",
                            "#e5c494",
                            "#e78ac3",
                            "#a6d854",
                            "#ffd92f",
                            "#8da0cb"
                            ]
                        }
                },
                "opacity": {
                    "condition": {"selection": "Region_highlight", "value": 0.6},
                    "value": 0.1
                },
                "tooltip": [
                    {"field": "country", "type": "nominal"},
                    {"field": "date", "type": "temporal"},
                    {"field": "people_fully_vaccinated_per_hundred", "type": "quantitative",
                        "format": ",", "name": "Population double vax %"},
                    {"field": "region", "type": "nominal"},
                    {"field": "rank", "type": "quantitative", "format": ","},
                    {"field": "population", "type": "quantitative"}
                ]
            }  
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {"field": "country", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum['country'] == 'Gibraltar' & datum['people_fully_vaccinated_per_hundred'] == 84.93 || datum['country'] == 'Seychelles' & datum['people_fully_vaccinated_per_hundred'] == 59.14",
                        "value": 1
                    },
                    "value": 0
                },

                "tooltip": [
                    {"field": "country", "type": "nominal", "title": "Country"},
                    {"field": "date", "type": "temporal", "title": "Date"},
                    {"field": "people_fully_vaccinated_per_hundred", "type": "quantitative",
                        "format": ",", "title": "Population double vaccinated (%)"},
                    {"field": "region", "type": "nominal", "title": "Region"},
                    {"field": "subregion", "type": "nominal", "title": "Subregion"},
                    {"field": "rank", "type": "quantitative", "format": ",", "title": "Rank"},
                    {"field": "population", "type": "quantitative", "title": "Population"}
                ]
            }
        }
    ]
}